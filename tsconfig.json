{
    "compilerOptions": {
      "rootDir": ".",
      "outDir": "./dist",
      "declaration": true,
      "module": "ES2020",
      "target": "esnext",
      "sourceMap": true,
      "strictNullChecks": true,
      "strict": true,
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "watch": false
    },
    "types": [
      "node"
    ],
    "exclude": [
      "node_modules",
      "./dist"
    ]
  }