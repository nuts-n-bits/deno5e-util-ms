{
    "compilerOptions": {
      "rootDir": ".",
      "outDir": "./dist",
      "declaration": true,
      "module": "commonjs",
      "target": "ES2020",
      "sourceMap": true,
      "strictNullChecks": true,
      "strict": true,
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "watch": false
    },
    "types": [
      "node"
    ],
    "include": [
      "src/**/*", "index.ts"
    ]
  }